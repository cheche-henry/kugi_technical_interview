<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-10">
  <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-6">All Blog Posts</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Color block or image placeholder -->
        <div class="h-32 bg-gradient-to-r from-indigo-500 to-purple-500"></div>

        <div class="p-6">
          <h3 class="text-xl font-bold text-gray-900 mb-3"><%= post.title %></h3>
          <p class="text-gray-600 mb-4"><%= truncate(post.body, length: 100) %></p>

          <div class="flex justify-between items-center">
            <span class="inline-flex items-center text-sm text-gray-500">
              <i class="far fa-user mr-1"></i>
              <%= post.user.name %>
            </span>

            <span class="inline-flex items-center text-sm text-gray-500">
              <i class="far fa-comment mr-1"></i>
              <%= post.comments.count %> Comments
            </span>
          </div>

          <div class="mt-4 text-right">
            <%= link_to 'Read More â†’', post_path(post), class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
