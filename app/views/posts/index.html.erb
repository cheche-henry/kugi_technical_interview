<h1 class="text-4xl font-bold mb-8 text-center text-gray-800">ðŸ“š Ruby on Rails Blog</h1>

<%= link_to "âž• New Post", new_post_path, class: "block w-fit mx-auto mb-8 px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition" %>

<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  <% @posts.each do |post| %>
    <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition duration-300 border border-gray-200">
      
      <% if post.image_url.present? %>
        <img src="<%= post.image_url %>" alt="Post image" class="w-full h-48 object-cover">
      <% end %>

      <div class="p-5">
        <h2 class="text-xl font-semibold mb-1 text-blue-800 hover:underline">
          <%= link_to post.title, post_path(post) %>
        </h2>
        <p class="text-sm text-gray-500 mb-2">By <%= post.user.name %> â€¢ <%= post.created_at.strftime("%b %d, %Y") %></p>
        <p class="text-gray-700 text-sm mb-4 line-clamp-3"><%= truncate(post.summary, length: 100) %></p>

        <%= link_to "Read More", post_path(post), class: "text-blue-600 font-medium hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
