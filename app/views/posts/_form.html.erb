<%= form_with(model: post, local: true) do |form| %>
  <div class="space-y-4">

    <div>
      <%= form.label :title, class: "block font-semibold mb-1" %>
      <%= form.text_field :title, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :summary, class: "block font-semibold mb-1" %>
      <%= form.text_field :summary, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :image_url, class: "block font-semibold mb-1" %>
      <%= form.text_field :image_url, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :body, class: "block font-semibold mb-1" %>
      <%= form.text_area :body, rows: 8, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>

  </div>
<% end %>
