<div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <!-- Top Banner or Image -->
  <% if @post.image_url.present? %>
    <img src="<%= @post.image_url %>" alt="<%= @post.title %>" class="w-full h-48 object-cover rounded-lg mb-6">
  <% else %>
    <div class="h-48 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg mb-6 flex items-center justify-center text-white">
      No Image
    </div>
  <% end %>

  <!-- Title -->
  <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @post.title %></h1>

  <!-- Author Info -->
  <p class="text-sm text-gray-500 mb-6">By <%= @post.user.name %></p>

  <!-- Body -->
  <div class="prose max-w-none text-gray-800">
    <%= simple_format(@post.body) %>
  </div>

  <!-- Comments Section -->
  <turbo-frame id="comments">
    <%= render partial: "posts/comments", locals: { post: @post } %>
  </turbo-frame>

  <!-- Comment Form -->
  <turbo-frame id="new_comment" class="mt-6">
    <%= render "comments/form", post: @post, comment: Comment.new %>
  </turbo-frame>
</div>
