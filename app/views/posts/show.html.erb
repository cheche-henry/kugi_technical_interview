<div class="bg-white p-6 rounded shadow">
  <h1 class="text-3xl font-bold mb-2"><%= @post.title %></h1>
  <p class="text-sm text-gray-500 mb-4">By <%= @post.user.name %></p>

  <% if @post.image_url.present? %>
    <img src="<%= @post.image_url %>" alt="Blog Image" class="rounded mb-4 w-full max-h-96 object-cover">
  <% end %>

  <p class="text-gray-800 leading-relaxed"><%= simple_format(@post.body) %></p>
</div>
